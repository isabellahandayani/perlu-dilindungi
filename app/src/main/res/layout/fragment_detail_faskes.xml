<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:color="?backgroundColor"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+Bookmark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.809" />

    <Button
        android:id="@+id/btn_gmaps"
        android:layout_width="124dp"
        android:layout_height="59dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="144dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="85dp"
        android:text="Google Maps"
        app:layout_constraintBottom_toTopOf="@+id/btn_bookmark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusFaskes" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="206dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/namaFaskes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Faskes"
            android:textSize="34sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kodeFaskes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Kode Faskes"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/jenisFaskes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Jenis Faskes"
                android:textColor="@color/black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/alamatFaskes"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Alamat Faskes"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/teleponFaskes"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="Telpon Faskes"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/statusFaskes"
        android:layout_width="238dp"
        android:layout_height="55dp"
        android:layout_marginEnd="87dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="132dp"
        android:text="Siap Vaksin/Ga"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>